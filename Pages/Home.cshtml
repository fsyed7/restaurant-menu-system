@page "/"
@model MenuSystemUI.Pages.HomeModel
@{
    ViewData["Title"] = "Home";
}

<section class="home-hero py-5" style="background-color:rgb(26,8,47);accent-color:rgb(44,17,85);">

    <div class="container">
        <div class="row align-items-center gy-4">

            <!-- LEFT SIDE — Carousel -->
            <div class="col-12 col-lg-6">

                <div id="heroCarousel" class="carousel slide" data-bs-ride="carousel">
                    <div class="carousel-inner rounded-4 shadow-lg">

                        <div class="carousel-item active">
                            <img src="~/images/pasta.jpg" asp-append-version="true" class="d-block w-100" alt="Pasta Alfredo" />
                            <div class="carousel-caption d-none d-md-block bg-dark bg-opacity-50 rounded-3 p-2">
                                <h5>Pasta</h5>
                                <p></p>
                            </div>
                        </div>

                        <div class="carousel-item">
                            <img src="~/images/burger-hero.jpg" asp-append-version="true" class="d-block w-100" alt="Signature Burger" />
                            <div class="carousel-caption d-none d-md-block bg-dark bg-opacity-50 rounded-3 p-2">
                                <h5>Signature Burger</h5>
                                <p>Customize toppings.</p>
                            </div>
                        </div>

                        <div class="carousel-item">
                            <img src="~/images/dessert-hero.jpg" asp-append-version="true" class="d-block w-100" alt="Dessert" />
                            <div class="carousel-caption d-none d-md-block bg-dark bg-opacity-50 rounded-3 p-2">
                                <h5>Neon Dessert Trio</h5>
                                <p></p>
                            </div>
                        </div>

                    </div>

                    <button class="carousel-control-prev" type="button" data-bs-target="#heroCarousel" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>

                    <button class="carousel-control-next" type="button" data-bs-target="#heroCarousel" data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                </div>

            </div>

            <!-- RIGHT SIDE — Logo + Title + Description -->
            <div class="col-12 col-lg-6">

                <div class="d-flex align-items-center mb-3">
                    <div class="brand-logo me-2">
                        <img src="~/images/logo.png" alt="Campus Bistro logo" style="height:48px;" />
                    </div>
                    <div>
                        <h1 class="h3 mb-0">Menu System</h1>
                        <p class="small text-muted mb-0">
                            Animatronics Theme Park Restaurant
                        </p>
                    </div>
                </div>

                <p class="lead mb-3">
                    Welcome to our interactive restaurant menu system.
                </p>

                <p class="text-muted mb-4">
                    
                </p>

                <a asp-page="/Menus/Index" class="btn btn-lg me-2" style="background-color:rgb(224,64,251)">
                    Browse Menus
                </a>

                <a asp-page="/About" class="btn btn-outline-secondary btn-lg">
                    Learn More
                </a>

            </div>

        </div>
    </div>
</section>
