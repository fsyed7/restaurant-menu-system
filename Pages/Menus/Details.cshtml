@page "{id:int}"
@model MenuSystemUI.Pages.Menus.DetailsModel
@{
    ViewData["Title"] = Model.Food?.Name ?? "Menu item";
}

@if (Model.Food is null)
{
    <div class="container py-5">
        <p class="text-danger">Item not found.</p>
    </div>
}
else
{
    var f = Model.Food;

    <section class="container py-4 food-details-page">
        <a asp-page="Index"
           class="text-decoration-none small mb-3 d-inline-flex align-items-center">
            <span class="me-1">&larr;</span> Back to menu
        </a>

        <div class="row gy-4">

            <div class="col-12 col-lg-5">
                <form method="post" asp-page-handler="AddToCart" asp-route-id="@f.Id">
                    <div class="card nutrition-card mb-3">
                        <div class="card-body">
                            <h2 class="h6 mb-3">Nutrition per serving</h2>
                            <dl class="row mb-0 small">
                                <dt class="col-6">Calories</dt>
                                <dd class="col-6 text-end">@f.Stats.Calories cal</dd>

                                <dt class="col-6">Protein</dt>
                                <dd class="col-6 text-end">@f.Stats.Protein g</dd>

                                <dt class="col-6">Fat</dt>
                                <dd class="col-6 text-end">@f.Stats.Fat g</dd>

                                <dt class="col-6">Carbs</dt>
                                <dd class="col-6 text-end">@f.Stats.Carbs g</dd>
                            </dl>
                        </div>
                    </div>

                    @* toppings selector is now INSIDE the form *@
                    @if (Model.Toppings.Count > 0)
                    {
                        <div class="card nutrition-card mb-3">
                            <div class="card-body">
                                <h2 class="h6 mb-3">Choose toppings</h2>
                                <p class="small text-muted">
                                    Select any toppings you want. Price updates in the order summary.
                                </p>

                                @foreach (var t in Model.Toppings)
                                {
                                    <div class="form-check small mb-1">
                                        <input class="form-check-input"
                                               type="checkbox"
                                               name="SelectedToppings"
                                               value="@t.Name"
                                               id="top-@t.Name">
                                        <label class="form-check-label" for="top-@t.Name">
                                            @t.Name
                                            <span class="text-muted">
                                                (+@t.Price.ToString("C"), @t.Calories cal)
                                            </span>
                                        </label>
                                    </div>
                                }
                            </div>
                        </div>
                    }

                    <div class="mb-3">
                        <label asp-for="Quantity" class="form-label small">Quantity</label>
                        <input asp-for="Quantity" class="form-control form-control-sm" min="1" />
                    </div>

                    <button type="submit" class="btn btn-primary w-100">
                        Add to cart &amp; go to order summary
                    </button>
                </form>
            </div>


         
        </div>
    </section>
}

