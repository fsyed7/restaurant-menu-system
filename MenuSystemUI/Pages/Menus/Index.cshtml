@page
@model MenuSystemUI.Pages.Menus.IndexModel
@{
    ViewData["Title"] = "Menus";
}

<section class="menus-page container-fluid px-5 py-4">

    <header class="mb-4 d-flex justify-content-between align-items-center flex-wrap gap-3">
        <h1 class="h4 mb-0">Menu</h1>

        <div class="menu-category-bar d-inline-flex gap-1">
            <a asp-page="./Index"
               asp-route-filter="All"
               class="menu-category-pill @(Model.Filter == "All" ? "active" : "")">
                All
            </a>
            <a asp-page="./Index"
               asp-route-filter="Dinner"
               class="menu-category-pill @(Model.Filter == "Dinner" ? "active" : "")">
                Dinner
            </a>
            <a asp-page="./Index"
               asp-route-filter="Drinks"
               class="menu-category-pill @(Model.Filter == "Drinks" ? "active" : "")">
                Drinks
            </a>
        </div>
    </header>

    @foreach (var menu in Model.Menus)
    {
        <section class="mb-4">
            <h2 class="h5 mb-3">@menu.Name</h2>

            <div class="row g-4">
                @foreach (var item in menu.Items)
                {
                    <div class="col-12 col-sm-6 col-lg-4">
                        <article class="card menu-card h-100">

                            @if (!string.IsNullOrEmpty(item.ImagePath))
                            {
                                <img src="@item.ImagePath"
                                     asp-append-version="true"
                                     alt="@item.Name"
                                     class="menu-card-img" />
                            }


                            <div class="card-body d-flex flex-column">
                                <h3 class="h6 mb-1">@item.Name</h3>
                                <p class="menu-card-meta mb-2">
                                    @item.Category · @item.Stats.Calories cal
                                </p>

                                <div class="mt-auto d-flex justify-content-between align-items-center gap-1">
                                    <span class="menu-card-footer">
                                        @item.Price.ToString("C")
                                    </span>

                                    <div class="d-flex gap-1">
                                        <a asp-page="Details"
                                           asp-route-id="@item.Id"
                                           class="btn btn-sm btn-outline-secondary">
                                            Details
                                        </a>

                                        <form method="post"
                                              asp-page-handler="AddToCart"
                                              asp-route-id="@item.Id"
                                              asp-route-filter="@Model.Filter"
                                              class="d-inline">
                                            <button type="submit"
                                                    class="btn btn-sm btn-primary"
                                                    title="Add to cart">
                                                +
                                            </button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </article>
                    </div>
                }
            </div>
        </section>
    }
</section>




