@page "/"
@model MenuSystemUI.Pages.HomeModel
@{
    ViewData["Title"] = "Home";
}

<section class="home-hero py-5">
    <div class="container">
        <div class="row align-items-center gy-4">

            <!-- LEFT SIDE — Carousel -->
            <div class="col-12 col-lg-6">

                <div id="heroCarousel" class="carousel slide" data-bs-ride="carousel">
                    <div class="carousel-inner rounded-4 shadow-lg">

                        <div class="carousel-item active">
                            <img src="~/images/pasta.jpg" asp-append-version="true" class="d-block w-100" alt="Pasta Alfredo" />

                            <div class="carousel-caption d-none d-md-block bg-dark bg-opacity-50 rounded-3 p-2">
                                <h5>Creamy Alfredo Pasta</h5>
                                <p>Creamy pasta finished with parmesan and herbs.</p>
                            </div>
                        </div>

                        <div class="carousel-item">
                            <img src="~/images/burger-hero.jpg" asp-append-version="true" class="d-block w-100" alt="Signature Burger" />

                            <div class="carousel-caption d-none d-md-block bg-dark bg-opacity-50 rounded-3 p-2">
                                <h5>Signature Burger</h5>
                                <p>Build your burger with custom toppings, cooked to order on the grill.</p>
                            </div>
                        </div>

                        <div class="carousel-item">
                            <img src="~/images/dessert-hero.jpg" asp-append-version="true" class="d-block w-100" alt="Dessert" />
                            <div class="carousel-caption d-none d-md-block bg-dark bg-opacity-50 rounded-3 p-2">
                                <h5>Neon Dessert Trio</h5>
                                <p>Colourful desserts to finish your meal on a high note.</p>
                            </div>
                        </div>

                    </div>

                    <button class="carousel-control-prev" type="button" data-bs-target="#heroCarousel" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>

                    <button class="carousel-control-next" type="button" data-bs-target="#heroCarousel" data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                </div>

            </div>

            <!-- RIGHT SIDE — Logo + Title + Description -->
            <div class="col-12 col-lg-6">

                <div class="d-flex align-items-center mb-3">
                    <div class="brand-logo me-2">
                        <img src="~/images/logo.png" asp-append-version="true"
                             style="height:32px; width:auto; padding:0; margin:0; background:none; border:none; object-fit:contain;" />
                    </div>
                    <div>
                        <h1 class="h3 mb-0">Menu System</h1>
                        <p class="small text-muted mb-0">
                            Animatronics Restaurant
                        </p>
                    </div>
                </div>

                <p class="lead mb-3">
                    Welcome to our interactive restaurant menu system.
                </p>

                <p class="text-muted mb-4">
                    Guests browse dishes, customize toppings, and build their cart here while the kitchen
                    and service teams work behind the scenes. This UI will integrate with the POS,
                    Inventory, Database, and Transactions services so orders, stock, and payments stay
                    in sync across the restaurant.
                </p>

                <a asp-page="/Menus/Index" class="btn btn-primary btn-lg me-2">
                    Browse Menus
                </a>

                <a asp-page="/About" class="btn btn-outline-secondary btn-lg">
                    Learn More
                </a>

            </div>

        </div>
    </div>
</section>
